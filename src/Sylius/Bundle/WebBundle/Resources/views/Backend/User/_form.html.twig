{% form_theme form 'SyliusWebBundle::forms.html.twig' %}

<div class="row">
    <div class="col-md-12">
        <fieldset>
            {{ form_row(form.email) }}
            {{ form_row(form.firstName) }}
            <div class="hide">
            {{ form_row(form.lastName) }}
            </div>
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.enabled) }}
            {{ form_row(form.status) }}
            {#{{ form_row(form.roles) }}#}
            <div class="hide">
            {{ form_row(form.groups) }}
            </div>
        </fieldset>
    </div>
</div>
{{ form_rest(form) }}
