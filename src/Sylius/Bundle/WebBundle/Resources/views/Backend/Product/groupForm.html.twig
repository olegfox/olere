<div class="groupEdit" style="display: none;">
    <div class="page-header">
        <h1>
            <small>Групповое редактирование</small>
        </h1>
    </div>
    <form action="{{ path('sylius_backend_product_edit_products') }}" method="post" onsubmit="editProductsSubmit(); return false;">
        <input type="hidden" name="ids" id="ids"/>
        <div class="form-group">
            <select name="skuCode" id="skuCode" class=" form-control">
                <option value="">Код артикула</option>
                <option value="2">2</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <select name="enabled" id="enabled" class=" form-control">
                <option value="">Скрыть?</option>
                <option value="0">Нет</option>
                <option value="1">Да</option>
            </select>
        </div>
        <div class="form-group">
            <select name="taxons[]" class=" form-control" multiple="true">
                {% for taxon in taxons %}
                    <option {% if taxon.parent.id is not defined %}disabled{% endif %}{% if loop.index == 1 %} selected{% endif %} value="{{ taxon.id }}">{{ taxon.name }}</option>
                {% endfor %}
            </select>
        </div>
        <button class="btn btn-primary" type="submit">
            <i class="glyphicon glyphicon-pencil"></i><span>Сохранить изменения</span>
        </button>
    </form>
    <br/>
    <br/>
</div>