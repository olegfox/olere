{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% from 'SyliusWebBundle:Frontend/Macros:actions.html.twig' import update %}

{% trans_default_domain 'FOSUserBundle' %}

{% block html %} ng-app="register"{% endblock %}

{% block border %}

{% endblock %}

{% block content %}
    <form name="form" action="{{ path('fos_user_change_password') }}" method="post" class="form-horizontal registerForm changePasswordForm" ng-submit="submit">
        <fieldset class="well">
            {{ 'registration.register_headerType'|trans|raw }}
            <hr>
            <div class="left">
                <div class="form-group">
                    {{ form_row(form.current_password, {'attr' : {'placeholder' : 'sylius.form.frontend.password.current'|trans}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.first, {'attr' : {'placeholder' : 'sylius.form.frontend.password.new'|trans}} }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.second, {'attr' : {'placeholder' : 'sylius.form.frontend.password.confirmation'|trans}}) }}
                </div>
                <div class="form-actions clearfix">
                    <button type="submit" class="btn btn-success btn-lg">{{ 'registration.next'|trans }}</button>
                </div>
        </fieldset>
        {{ form_rest(form) }}
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


