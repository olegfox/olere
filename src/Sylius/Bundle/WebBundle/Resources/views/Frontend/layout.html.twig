<!-- Topmenu -->
<div class="wrap_top">
    <div class="top">
        <div class="pull-left">
            <div class="topPhone">
                +7 495 229-30-11
            </div>
        </div>
        <div class="pull-center">
            {#<!-- Logo -->#}
            <div class="logoBox">
                <a href="{{ path('sylius_homepage') }}">
                    <img src="{{ asset('images/logo.jpg') }}" alt="{{ asset('images/logo.jpg') }}" width="162px" height="32px">
                </a>
            </div>
        </div>
        <div class="pull-right">
            {#<div class="topTimes">#}
                {#Время работы: с 9 до 19#}
            {#</div>#}
            {#<div class="topCallback">#}
                {#<a href="{{ path('sylius_feedback') }}" class="buttonCallback">Заказать обратный звонок</a>#}
            {#</div>#}
            <div class="topMyAccount">
                {% if is_granted('ROLE_USER') %}
                    {% if app.request.attributes.get('_route') == "fos_user_profile_edit" or app.request.attributes.get('_route') == "fos_user_profile_show" %}
                        <a href="{{ path("fos_user_security_logout") }}">Выход</a>
                    {% else %}
                        <a href="{{ path("fos_user_profile_show") }}">Личный кабинет</a>
                    {% endif %}
                {% else %}
                    <a href="{{ path("fos_user_security_login") }}">Вход</a>
                {% endif %}
            </div>
            <div class="topTrash">
                <a href="{{ path('sylius_cart_summary') }}">Корзина</a>
            </div>
        </div>
        {#<div class="last"></div>#}
    </div>
</div>

<!-- Menu -->
<div class="wrap_menu">
    <div class="menu">
        {{ knp_menu_render('sylius.frontend.pagemenu', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
        <div class="topSearch">
            {% include "SyliusWebBundle:Frontend/Product:filterForm.html.twig" %}
        </div>
    </div>
</div>

{% block border %}
{% endblock %}
<!-- Slider -->
{% block slider %}
{% endblock %}
<!-- Container -->
<div class="wrap_container">
    <div class="container">

        <!-- Content -->
        {% block content %}
        {% endblock %}
        <div class="push"></div>
    </div>
</div>
<!-- BottomMenu -->
<div class="wrap_bottomMenu">
    <div class="bottomMenu">
        {{ knp_menu_render('sylius.frontend.bottom_menu', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
    </div>
</div>

<!-- Footer -->
{% block footer %}
<div class="wrap_footer">
    <div class="footer">
        {{ knp_menu_render('sylius.frontend.social', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
    </div>
</div>
{% endblock %}
{# Confirmation modal #}
