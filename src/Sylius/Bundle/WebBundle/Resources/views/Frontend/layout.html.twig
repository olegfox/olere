<!DOCTYPE html>
{% set settings = sylius_settings_all('general') %}
<html{% block html %}{% endblock %}>
<head>
    <title>
        {% block title %}
            {{ settings.title|default('sylius.meta.frontend_title'|trans) }}
        {% endblock %}
    </title>
    <meta charset="UTF-8">
    <meta name="description"
          content="{% block metaDescription %}{{ settings.meta_description|default('sylius.meta.frontend_description'|trans) }}{% endblock %}">
    <meta name="keywords" content="{% block metaKeywords %}{{ settings.meta_keywords|default('sylius.meta.frontend_keywords'|trans) }}{% endblock %}">

    {# stylesheets... #}
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css" type="text/css"/>
        {#<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />#}
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
              type="text/css"/>
        {% stylesheets output='assets/compiled/frontend.css' filter='cssrewrite'
        'bundles/syliusweb/css/frontend.css'
        'bundles/syliusweb/css/blueimp-gallery.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/flexslider.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/flexslider-custom.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/simplemodal.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('js/fancybox/source/jquery.fancybox.css') }}" type="text/css"
              media="screen"/>
        <link rel="stylesheet" href="{{ asset('js/fancybox/source/helpers/jquery.fancybox-buttons.css') }}"
              type="text/css" media="screen"/>
        {% endstylesheets %}
        {% set cart = sylius_cart_get() %}
        {% if cart.total > 0 and app.request.attributes.get('_route') != 'sylius_cart_summary' and app.request.attributes.get('_route') != 'sylius_checkout_display' %}
            <link rel="stylesheet" href="{{ asset('css/bottom.menu.cart.css') }}"
                  type="text/css"/>
        {% endif %}
    {% endblock %}

